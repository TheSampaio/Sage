use console;

func main(): none
{
    var a: i32 = 10;
    var b: f64 = 2.5;
    
    // Sem o cast, isso daria erro de tipo.
    // Com o cast, convertemos o resultado da soma (f64) para i32 (truncando o 0.5)
    var result: i32 = (a + b) as i32; 

    console::print_line("Result truncated: {result}");

    // Teste direto de f64 para i32
    var pi_int: i32 = 3.1415 as i32;
    console::print_line("Pi as Int: {pi_int}");
}